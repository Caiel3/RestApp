@model ReatApp.Web.Models.PointSaleViewModel

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Address" class="control-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="RestaurantId" class="control-label"></label>
    <select asp-for="RestaurantId" asp-items="Model.Restaurants" class="form-control"></select>
    <span asp-validation-for="RestaurantId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ImageFile" class="control-label"></label>
    <input asp-for="ImageFile" type="file" class="form-control" />
    <span asp-validation-for="ImageFile" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Latitude" class="control-label"></label>
    <input asp-for="Latitude" class="form-control" />
    <span asp-validation-for="Latitude" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Longitude" class="control-label"></label>
    <input asp-for="Longitude" class="form-control" />
    <span asp-validation-for="Longitude" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="HourStart" class="control-label"></label>
    <input asp-for="HourStart" class="form-control" type="time" />
    <span asp-validation-for="HourStart" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="HourFinish" class="control-label"></label>
    <input asp-for="HourFinish" class="form-control" type="time"/>
    <span asp-validation-for="HourFinish" class="text-danger"></span>
</div>

